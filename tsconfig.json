{
    "compilerOptions": {
      "experimentalDecorators": true,
      "outDir": "dist",
      "module": "commonjs",
      "target": "es2021",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "rootDirs": ["src", "tests"],
      "baseUrl": "src",
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "paths": {
        "@/*": ["*"],
        "@/tests/*": ["../tests/*"]
      }
    },
    "include": ["src", "tests"],
    "exclude": []
  }